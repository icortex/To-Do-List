= simple_form_for(@task, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :deadline, as: :string, :input_html => { :class => 'datepicker' }
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t(:cancel), '#', onClick: 'return false', class: 'btn', 'data-toggle' => "collapse", 'data-target'=>"#new_task"
