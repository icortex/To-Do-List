!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Quipper"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body
    %header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to image_tag('quipper_logo.png', alt: 'Quipper'), root_path
    %nav
    = render 'layouts/navigation'
    #main.container
      .row
        .span9
          = yield
        .span3
          %h2= t(:quipper_todo)
          %p= t(:quipper_explanation)
